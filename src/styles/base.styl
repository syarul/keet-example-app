#app
  margin 10px

#banner
  text-align center
  padding-bottom 20px
  border-bottom 1px solid black
  
#routes
  display flex
  	
#home, #register, #login, #protected
  width 200px
  margin-right 10px
  cursor pointer
  padding 10px
  border 1px solid black
  background #ddd
  text-align center
  &:hover
  	background #eee
  	
#content
  display flex
  margin-top 10px
  padding 6px
  width -webkit-fill-available
  min-height 100px
  background #ccc
  text-align center
  justify-content center
  align-items center

#loginForm, #registerForm
  display flex 
  flex-direction column

#slider
  display flex
  border 1px solid #aaa
  background white
  #drag
    width 50px
    height 30px
    position relative
    